#include <iostream>
using namespace std;

int main() {
    int number;

    cout << "=== Even or Odd Checker ===\n";

    // Get number 
    cout << "Enter an integer: ";
    cin >> number;

    // Check if number is divisible by 2
    if (number % 2 == 0) {
        cout << number << " is even.\n";
    } else {
        cout << number << " is odd.\n";
    }

    return 0;
}
