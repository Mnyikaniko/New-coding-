#include <iostream>
using namespace std;

int main() {
    int year;

    cout << "=== Leap Year Checker ===\n";

    // Input the year
    cout << "Enter a year: ";
    cin >> year;

    // Check if year is leap
    if ((year % 4 == 0 && year % 100 != 0) || (year % 400 == 0)) {
        cout << year << " is a leap year.\n";
    } else {
        cout << year << " is not a leap year.\n";
    }

    return 0;
}
